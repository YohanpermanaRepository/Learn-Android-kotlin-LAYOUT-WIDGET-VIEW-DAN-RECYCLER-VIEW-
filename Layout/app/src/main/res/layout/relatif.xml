<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/purple_500"
    android:layout_height="match_parent">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="200px"
        android:id="@+id/frame"
        android:background="@color/white">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="30px"
            android:gravity="center|left"
            android:text="Selamat Datang"
            android:textSize="50px"
            android:textStyle="bold" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_gravity="center|right"
            android:layout_margin="20dp"
            android:onClick="lanjut"
            android:text="BACK"
            android:textSize="10dp"
            tools:ignore="TextSizeCheck" />

    </FrameLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GALERI YOHAN PERMANA"
        android:textStyle="bold"
        android:layout_below="@+id/frame"
        android:layout_marginStart="30px"
        android:layout_marginTop="30px"/>

    <TableLayout
        android:id="@+id/tabel"
        android:layout_width="match_parent"
        android:layout_height="1100px"
        android:layout_below="@+id/textView"
        android:layout_marginStart="30px"
        android:layout_marginTop="30px"
        android:layout_marginEnd="30px"
        android:layout_marginBottom="30px">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="0dp"
                android:layout_height="300px"
                android:layout_margin="20px"
                android:layout_weight="2"
                android:background="@color/purple_200"
                android:text="FOTO UDIN"
                android:textAlignment="center" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="300px"
                android:layout_margin="20px"
                android:layout_weight="1"
                android:background="@color/purple_200"
                android:text="FOTO ANDI"
                android:textAlignment="center" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="300px"
                android:layout_margin="20px"
                android:layout_weight="1"
                android:background="@color/purple_200"
                android:text="FOTO BUDI"
                android:textAlignment="center" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="0dp"
                android:layout_height="300px"
                android:layout_margin="20px"
                android:layout_weight="1"
                android:background="@color/purple_200"
                android:text="FOTO RIKA"
                android:textAlignment="center" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="300px"
                android:layout_margin="20px"
                android:layout_weight="1"
                android:background="@color/purple_200"
                android:text="FOTO DONI"
                android:textAlignment="center" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="300px"
                android:layout_margin="20px"
                android:layout_weight="2"
                android:background="@color/purple_200"
                android:text="FOTO YOGA"
                android:textAlignment="center" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="0dp"
                android:layout_height="300px"
                android:layout_margin="20px"
                android:layout_weight="1"
                android:background="@color/purple_200"
                android:text="FOTO ILHAM"
                android:textAlignment="center" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="300px"
                android:layout_margin="20px"
                android:layout_weight="1"
                android:background="@color/purple_200"
                android:text="FOTO YONGKI"
                android:textAlignment="center" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="300px"
                android:layout_margin="20px"
                android:layout_weight="1"
                android:background="@color/purple_200"
                android:text="FOTO YOGIK"
                android:textAlignment="center" />
        </TableRow>

    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">


        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="64dp"
            android:layout_margin="20px"
            android:layout_weight="1"
            android:backgroundTint="@color/purple_200"
            android:text="MENU"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="64dp"
            android:layout_margin="20px"
            android:layout_weight="1"
            android:backgroundTint="@color/purple_200"
            android:text="LOAD"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="64dp"
            android:layout_margin="20px"
            android:layout_weight="1"
            android:backgroundTint="@color/purple_200"
            android:text="HAPUS"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="64dp"
            android:layout_margin="20px"
            android:layout_weight="1"
            android:backgroundTint="@color/purple_200"
            android:text="OK"
            android:textColor="@color/black"
            android:textStyle="bold" />
    </LinearLayout>


</RelativeLayout>